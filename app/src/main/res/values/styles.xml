<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowButtonStyle">@style/DotsTheme</item>
        <item name="colorControlNormal">@color/colorYellow</item>
        <item name="android:colorControlNormal">@color/colorYellow</item>

    </style>

    <style name="SwitchCompactStyle">
        <item name="android:thumb">@drawable/ic_notifications</item>
        <item name="android:thumbTint">@color/switch_color</item>
        <item name="android:trackTint">@color/switch_color</item>
    </style>

    <style name="SwitchCompactStyleRegular">
        <item name="android:thumbTint">@color/switch_color</item>
        <item name="android:trackTint">@color/switch_color</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DotsTheme" parent="@style/Widget.AppCompat.ActionButton.Overflow" >
        <item name="android:tint">@color/colorYellow</item>
    </style>

</resources>
